{
  "name": "retirement-calculators",
  "version": "0.4.0",
  "description": "A comprehensive web-based retirement planning tool that helps you project your pension growth and retirement income with scenario analysis and spending forecasts.",
  "scripts": {
    "start": "http-server ./src -p 8080",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "http-server": "^14.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/data/**"
    ]
  },
  "keywords": ["retirement", "pension", "calculator", "finance", "uk"],
  "author": "dhCopilot",
  "license": "MIT"
}
